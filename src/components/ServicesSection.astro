---
import { Image } from 'astro:assets';

const { services } = Astro.props;
const serv = services.services.slice(0, 6);
console.log(serv);
---
<section id="services">
    <div class="bg-white min-h-screen flex flex-col">
        <div class="container mx-auto py-6 flex-1 flex flex-col justify-center">
            <!-- Titre -->
            <div class="text-center mb-8 md:mb-16 xl:mb-24">
                <h3 class="text-3xl text-complementary-300 font-semibold uppercase">Les services que nous offrons</h3>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-3 grab-4 md:gap-8 mx-4 md:mx-24">
                {serv.map((service: { slug: string, title: string, shortDescription: string }) => (
                    <div class="bg-white rounded-xl shadow-lg shadow-primary-400 p-4 flex flex-col items-start justify-between mt-8 md:mt-2"
                        data-aos="zoom-out" data-aos-duration="1000">
                        <div class="flex items-center">
                            <div class="svg-container mr-2">
                                <Image src={'/svg/' + service.slug + '.svg'} alt="A description of my image." width="50" height="50" class="bg-purple-500 text-white rounded-lg shadow-md"/>
                            </div>
                            <h4 class="text-xl font-bold">{ service.title }</h4>
                        </div>
                        <p class="pt-2">{ service.shortDescription }</p>
                        <a href={'/services/' + service.slug} class="text-center w-full px-4 py-2 mt-3 mb-1 bg-primary-700 text-white rounded hover:bg-primary-800">
                            En savoir plus
                        </a>
                    </div>
                ))}
            </div>
        </div>
    </div>
</section>